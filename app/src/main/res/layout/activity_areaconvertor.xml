<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".areaconvertor"
    android:orientation="vertical"
    android:weightSum="4">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="AREA CONVERTOR"
        android:textAlignment="center"
        android:textStyle="bold">

    </TextView>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"


            >

            <EditText
                style="@style/edittextyle"
                android:id="@+id/areaconvert_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="ENTER AREA">

            </EditText>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">
            <TextView
                style="@style/textviewstyle"
                android:id="@+id/areaconvert_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2">
        <Spinner
            android:background="@color/spinnercolor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/areasp1"
            android:entries="@array/areaspinner"
            >

        </Spinner>
        <Spinner
            android:background="@color/spinnercolor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/areasp2"
            android:entries="@array/areaspinner"            >

        </Spinner>




    </LinearLayout>
    <Button
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:text="convert"
        android:id="@+id/btn_areconvert"
        android:textSize="30sp">

    </Button>
</LinearLayout>
</ScrollView>